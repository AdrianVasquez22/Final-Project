@page
@model Final_Project.Pages_Players.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Name)
        </dd>
            @foreach(var r in Model.Player.Teams)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => r.TeamName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => r.TeamName)
                </dd>
                <dd>
                    <div class="col-sm-auto">
                        <form method="post">
                            <a asp-page="UpdateTeam" asp-route-id="@r.TeamID" class="btn btn-primary btn-sm">Update This Team</a>
                            <input type="hidden" asp-for="TeamIDToDelete" value="@r.TeamID">
                            <input type="submit" asp-page-handler="DeleteTeam" asp-route-id="@Model.Player.PlayerID" value="Delete Team" class="btn btn-danger btn-sm">
                        </form>
                    </div>
                </dd>
            }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.BA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.BA)
        </dd>
                <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.HR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.HR)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.KRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.KRate)
            <span>%</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.WalkRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.WalkRate)
            <span>%</span>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Player.PlayerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
