@page
@model Final_Project.Pages_Players.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.BA)
        </dt>
        <dd class="col-sm-10">
            @Model.Player.BA.ToString("F3")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.HR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.HR)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.KRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.KRate)
            <span>%</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.WalkRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.WalkRate)
            <span>%</span>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Player.PlayerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
